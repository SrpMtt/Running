<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/item_container"
   android:orientation="vertical"
   android:layout_width="match_parent"
   android:layout_height="110dp"
   android:background="@android:color/transparent">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
         android:id="@+id/session_name_item"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_centerVertical="true"
         android:maxWidth="140dp"
         android:singleLine="true"
         android:ellipsize="middle"
         android:layout_margin="10dp"
         android:text="Name"
         android:textColor="@color/DimGray"
         android:textSize="18sp"
         android:gravity="left"
    />


   <RelativeLayout
      android:id="@+id/date_distance_container"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_toLeftOf="@+id/container_icon"
      android:gravity="center">

      <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/session_date_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/session_distance_item"
                android:gravity="center"
                android:text="Date"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:textColor="@color/DimGray"
      />

      <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/session_distance_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text ="D"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:textColor="@color/DimGray"
         />

   </RelativeLayout>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/container_icon"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_alignParentRight="true"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:layout_margin="10dp"
              android:text =">"
              android:textSize="20sp"
              android:textColor="@color/DimGray"
        />

   <!--<ImageView xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/container_icon"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_margin="10dp"
             android:elevation="0dp"
             android:src="@drawable/ic_arrow"
      /> -->
</RelativeLayout>